{
  "name": "club-seville-international",
  "version": "1.0.0",
  "description": "International Club for Water Hobbyists",
  "author": "aes",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "build-test": "npm run build && npm run start-test",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "prestart-test": "pm2 -s delete nextseville || :",
    "start-test": "cross-env NODE_ENV=production PORT=3001 DATABASE_URL=postgres://aes:password@localhost/clubseville API_URL=http://localhost:3001 API_URL_BROWSER=https://clubseville.icu pm2 start server/index.js --name nextseville",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "heroku-postbuild": "npm run build",
    "test": "mocha \"./{,!(node_modules)/**/}*.test.js\"",
    "test-watch": "nodemon --exec \"npm test\""
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.0-next5",
    "nuxt": "^2.3.4",
    "pg": "^7.6.1",
    "vuetify": "^1.3.9"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "chai": "^4.2.0",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "supertest": "^3.3.0"
  }
}
